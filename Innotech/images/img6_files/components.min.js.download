(function($, document){

    function init() {
        var donorInfo = JSON.parse(window.sessionStorage.getItem('donorInfo')) || {};
        var isEditMode = $('#confirmation-copy-template-placeholder').hasClass('edit');

        if (isEditMode) {
            donorInfo.firstName = '{{firstName}}';
